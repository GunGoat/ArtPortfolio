@model ArtPortfolio.Domain.Entities.Artist
@{
    ViewData["Title"] = "Delete Artist";
}

<div class="container pt-5">
    <div class="card shadow border">
        <div class="card-header bg-danger bg-gradient ml-0 py-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="py-2 text-white">Delete Artist</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <div class="row pt-3">
                <div class="col-md-12">
                    <form class="row" asp-action="Delete" method="post">
                        <div class="form-floating mb-3 col-md-6">
                            <input asp-for="FirstName" class="form-control" disabled />
                            <label asp-for="FirstName" class="ms-2 text-muted"></label>
                        </div>
                        <div class="form-floating mb-3 col-md-6">
                            <input asp-for="LastName" class="form-control" disabled />
                            <label asp-for="LastName" class="ms-2 text-muted"></label>
                        </div>
                        <div class="form-floating mb-3 col-md-12">
                            <textarea asp-for="Biography" class="form-control" disabled></textarea>
                            <label asp-for="Biography" class="ms-2 text-muted"></label>
                        </div>
                        <div class="form-floating mb-3 col-md-12">
                            <input asp-for="Email" class="form-control" disabled />
                            <label asp-for="Email" class="ms-2 text-muted"></label>
                        </div>
                        <div class="form-floating mb-3 col-md-12">
                            <input asp-for="Website" class="form-control" disabled />
                            <label asp-for="Website" class="ms-2 text-muted"></label>
                        </div>
                        <div class="form-floating mb-3 col-md-12">
                            <input asp-for="DateOfBirth" class="form-control" type="date" disabled />
                            <label asp-for="DateOfBirth" class="ms-2 text-muted"></label>
                        </div>
                        <div class="form-group mb-3 text-center col-md-12">
                            <label>Current Profile Picture:</label>
                            <img src="@Model.ProfilePictureUrl" alt="Profile Picture" class="img-thumbnail d-block mx-auto" />
                        </div>
                        <div class="col-12">
                            <button type="submit" class="w-100 btn btn-lg btn-outline-danger">Delete</button>
                            <a asp-action="Index" class="w-100 btn btn-lg btn-secondary mt-2">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
