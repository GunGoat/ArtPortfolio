@model ArtPortfolio.Domain.Entities.Artist
@{
    ViewData["Title"] = "Update Artist";
}

<div class="container pt-5">
    <div class="card shadow border">
        <div class="card-header bg-success bg-gradient ml-0 py-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="py-2 text-white">Update Artist</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <div class="row pt-3">
                <div class="col-md-12">
                    <form class="row" asp-action="Update" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <input asp-for="ProfilePictureUrl" type="hidden" />

                        <div class="form-floating mb-3 col-md-6">
                            <input asp-for="FirstName" class="form-control" />
                            <label asp-for="FirstName" class="ms-2 text-muted"></label>
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3 col-md-6">
                            <input asp-for="LastName" class="form-control" />
                            <label asp-for="LastName" class="ms-2 text-muted"></label>
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3 col-md-12">
                            <textarea asp-for="Biography" class="form-control"></textarea>
                            <label asp-for="Biography" class="ms-2 text-muted"></label>
                            <span asp-validation-for="Biography" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3 col-md-12">
                            <input asp-for="Email" class="form-control" />
                            <label asp-for="Email" class="ms-2 text-muted"></label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3 col-md-12">
                            <input asp-for="Website" class="form-control" />
                            <label asp-for="Website" class="ms-2 text-muted"></label>
                            <span asp-validation-for="Website" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3 col-md-12">
                            <input asp-for="DateOfBirth" class="form-control" type="date" />
                            <label asp-for="DateOfBirth" class="ms-2 text-muted"></label>
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3 col-md-12">
                            <label asp-for="ProfilePicture" class="form-label">Profile Picture</label>
                            <input asp-for="ProfilePicture" class="form-control" type="file" onchange="previewImage(event)" />
                            <span asp-validation-for="ProfilePicture" class="text-danger"></span>
                            <img id="imagePreview" src="@Model.ProfilePictureUrl" alt="Image preview" class="img-thumbnail" />
                        </div>
                        <div class="col-12">
                            <button type="submit" class="w-100 btn btn-lg btn-outline-success">Update</button>
                            <a asp-action="Index" class="w-100 btn btn-lg btn-secondary mt-2">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript">
        function previewImage(event) {
            var reader = new FileReader();
            reader.onload = function () {
                var output = document.getElementById('imagePreview');
                output.src = reader.result;
            };
            reader.readAsDataURL(event.target.files[0]);
        }
    </script>
}
