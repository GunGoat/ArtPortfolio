@model ArtPortfolio.Domain.Entities.Artwork
@{
    ViewData["Title"] = "Create Artwork";
}

<div class="container pt-5">
    <div class="card shadow border">
        <div class="card-header bg-success bg-gradient ml-0 py-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="py-2 text-white">Create Artwork</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <div class="row pt-3">
                <div class="col-md-12">
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-floating mb-3 col-md-12">
                            <input asp-for="Title" class="form-control" />
                            <label asp-for="Title" class="ms-2 text-muted"></label>
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        @* Hidden ArtistId field *@
                        <input type="hidden" asp-for="ArtistId" />

                        <div class="form-floating mb-3 col-md-12">
                            <textarea asp-for="Description" class="form-control"></textarea>
                            <label asp-for="Description" class="ms-2 text-muted"></label>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <!-- Set CreationDate to the current date -->
                        <div class="form-floating mb-3 col-md-12">
                            <input asp-for="CreationDate" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                            <label asp-for="CreationDate" class="ms-2 text-muted"></label>
                            <span asp-validation-for="CreationDate" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3 col-md-12">
                            <input asp-for="Medium" class="form-control" />
                            <label asp-for="Medium" class="ms-2 text-muted"></label>
                            <span asp-validation-for="Medium" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3 col-md-12">
                            <input asp-for="Dimensions" class="form-control" />
                            <label asp-for="Dimensions" class="ms-2 text-muted"></label>
                            <span asp-validation-for="Dimensions" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3 col-md-12">
                            <input asp-for="Price" type="number" class="form-control" />
                            <label asp-for="Price" class="ms-2 text-muted"></label>
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3 col-md-12">
                            <label asp-for="Image" class="form-label">Artwork Image</label>
                            <input asp-for="Image" type="file" class="form-control" accept="image/*" required />
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>

                        <div class="col-12">
                            <button type="submit" class="w-100 btn btn-lg btn-outline-success">Create</button>
                            <a asp-action="Index" class="w-100 btn btn-lg btn-secondary mt-2">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
